<h1><%= t('controller.wobauth/groups') %></h1>


<div data-controller="datatables">
  <%= content_tag :table, id: :wobauth_groups,
      class: "table table-bordered table-striped" do %>
  <thead>
    <tr>
      <th><%= t('attributes.name') %></th>
      <th><%= t('attributes.description') %></th>
      <th class="nosort"><%= t('wobauth.action') %></th>
    </tr>
  </thead>
  <tfoot class="search">
    <tr>
      <th></th>
      <th></th>
      <th class="nosearch"></th>
    </tr>
  </tfoot>
  <tbody>

  <% @groups.each do |group| %>
    <%= content_tag(:tr, id: dom_id(group), class: dom_class(group)) do %>
      <td><%= group.name %></td>
      <td><%= group.description %></td>
      <td class="nowrap">
        <%= show_link [wobauth, group] %>
        <%= edit_link [wobauth, group] %>
        <%= delete_button [wobauth, group] %>
      </td>
    <% end %>
  <% end %>
  </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link [wobauth, Wobauth::Group] %>
