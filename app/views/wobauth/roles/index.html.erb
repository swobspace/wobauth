<%= render 'wobauth/shared/turbo-cache-control' %>

<h1><%= t('controller.wobauth/roles') %></h1>


<div data-controller="datatables">
  <%= content_tag :table, id: :wobauth_roles,
      class: "table table-bordered table-striped" do %>
  <thead>
    <tr>
      <th><%= t('attributes.name') %></th>
      <th class="nosort"><%= t('wobauth.action') %></th>
    </tr>
  </thead>
  <tbody>

  <% @roles.each do |role| %>
    <%= content_tag(:tr, id: dom_id(role), class: dom_id(role)) do %>
      <td><%= role.name %></td>
      <td class="nowrap">
        <%= show_link [wobauth, role] %>
      </td>
    <% end %>
  <% end %>
  </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
