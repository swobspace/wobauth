<div class="container">
<%= simple_form_for([wobauth, @user],
  html: { data: { turbo: false },
          class: 'form-horizontal card' }
  ) do |f| %>

  <div class="card-header">
    <%= form_legend %>
  </div>

  <div class="card-body">
    <%= f.input :username %>
    <%= f.input :sn %>
    <%= f.input :givenname %>
    <%= f.input :title %>
    <%= f.input :displayname %>
    <%= f.input :telephone %>
    <%= f.input :email %>
    <%= f.input :position %>
    <%= f.input :department %>
    <%= f.input :company %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= cancel_button %>
  </div>
<% end %>
</div>
